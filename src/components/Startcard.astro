---
const header = Astro.props.header;
const text = Astro.props.text;
const picture = Astro.props.picture;
---

<article>
  <div class="imgwrapper">
    <img src={picture} alt="">
    <div class="text-overlay">
		<h3>{text}</p>
      <h2>{header}</h2>
    </div>
  </div>

</article>

<style>
  .imgwrapper {
    position: relative; /* Ensure the image wrapper is a positioned container */
    height: 100%;
  }
  
  img {
    height: 100%;
    object-fit: cover;
  }



  .text-overlay {
    position: absolute; /* Position the text overlay */
    top: 90; /* Align it to the top of the image */
    /* left: 0; /* Align it to the left of the image */
    /* right: 0; /* Stretch it to cover the entire width of the image */
    bottom: 0; /* Stretch it to cover the entire height of the image */
    color: white; /* Text color */
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: left;
    padding: 20px; /* Add some padding for readability */
  }

  h2, h3 {
    margin: 0; /* Remove default margin */
   /* text-align: center; /* Center align text within the overlay */
  }

  h3 {
	font-size: 0.8rem;
  }
    h2 {
	font-size: 1.2rem;
  }
  @media (max-width: 753px) {

    .text-overlay{
      padding: 5px;
    }
h3{
  font-size: 0.43rem;

}
h2{
font-size: 0.6rem;
}

  }

  
</style>
